<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.Design.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="MainContentText">
        <item name="android:textSize">@dimen/text_main_size</item>
        <item name="android:color">@color/colorTextPrimary</item>
        <item name="android:layout_margin">@dimen/main_content_offset</item>
    </style>

    <style name="MainHeaderText">
        <item name="android:textSize">@dimen/text_header_size</item>
        <item name="android:layout_margin">@dimen/main_content_offset</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextExpandedAppbarTitle">
        <item name="android:textSize">@dimen/text_collapsible_appbar_title_size</item>
        <item name="android:color">@color/colorTextLight</item>
    </style>
</resources>
